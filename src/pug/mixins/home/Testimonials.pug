mixin Review({imgSrc, comment, name}, index)
  .col-12 
    .d-flex.justify-content-center.gap-2
      .d-flex.flex-column.flex-md-row.gap-2.px-4.py-x1(class=`review-card-${index + 1}`) 
        div.text-center.text-md-start 
          img(src=`${CWD}assets/img/feedback/${imgSrc}`, alt="").card-image.rounded-circle
        .text-center.text-md-start 
          p.fs-8.text-black.mb-2.lh-lg= comment 
          span.fs-9.lh-xl= name


