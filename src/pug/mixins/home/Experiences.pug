mixin Service({icon, title, description})
  .col-12.col-sm-6.col-lg-4.d-flex.gap-1 
    div 
      img(src=`${CWD}assets/img/icons/${icon}`, alt="")
    div 
      h5.fs-8.text-white.mb-2.lh-lg= title
      p.fs-9.lh-xl= description 

