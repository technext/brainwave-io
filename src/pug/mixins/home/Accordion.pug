mixin AccordionItem({heading, body}, index) 

  .accordion-item 
    h2.accordion-header(id=`heading${index+1}`)
      button.accordion-button.fs-8.lh-lg.fw-bold.pt-x1.pb-2(type='button' class=`${index!== 0 ? 'collapsed': ''}` data-bs-toggle="collapse" data-bs-target=`#collapse${index+1}` aria-expand=`${index=== 0 ? true: false}` aria-controls=`collapse${index+1}` data-accordion-button)=  heading 

    .accordion-collapse.collapse(id=`collapse${index+1}` class=`${index === 0 ? 'show': ''}` data-bs-parent="#accordion")
      .accordion-body.fs-9.lh-xl.accoridion-text.opacity-70.pt-0.pb-x1=  body 
