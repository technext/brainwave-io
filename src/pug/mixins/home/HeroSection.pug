include Button

mixin HeroSection 
  .main-container.mb-7.mb-lg-8.mb-xl-9.position-relative.z-0
    .hero(style=`background-image:url('${CWD}assets/img/illustrations/BG.png')`)
      .container 
        .row.g-1.pt-9.pt-lg-0
          .col-12.col-lg-6
            h1.fs-2.fs-lg-1.text-white.fw-bold.mb-2.mb-lg-x1  Manage your remote team work
            p.fs-9.fs-lg-8.text-white.mb-3.mb-lg-4 With lots of unique blocks, you can easily build a page without coding. Build your next consultancy website within few minutes
            button.btn.bg-danger.mb-6.mb-lg-7 Explore more
            .d-sm-flex.align-items-sm-center.gap-1.z-3
              div 
                +Button('assets/img/logos/App_store.png')
              div 
                +Button('assets/img/logos/Play_store.png')
          .col-12.col-lg-6.position-lg-relative
            .position-lg-absolute.hero-image.text-center.top-0.end-0
              .position-relative.z-1 
                img(src=`${CWD}assets/img/Hero/Frame.png`, alt="").img-fluid.chat-image
                .position-absolute.dots 
                  img(src=`${CWD}assets/img/illustrations/Dots.png`, alt="").img-fluid.w-50.w-lg-75

    .wave-container.position-absolute.bottom-0.start-0.z-1
      img(src=`${CWD}assets/img/illustrations/Wave.svg`, alt="").img-fluid.w-100
      .bg